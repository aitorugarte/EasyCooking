{# src/Cooker/CookingBundle/Resources/views/Cook/showIngr.html.twig #}
{% extends 'CookerCookingBundle::sidebar.html.twig' %}
{% block title %}{{ ingrediente.nombre }}{% endblock %}

{% block body %}
	<h1>Recetas para el ingrediente: {{ ingrediente.nombre }}</h1>
	
	<ul>
	{% for receta in recetas %}
	<li><a href="{{ path('cooker_cook_showReceta', { 'id': receta.id }) }}">{{ receta.nombre }}</a></li>
	{% endfor %}
	</ul>

{% endblock %}
