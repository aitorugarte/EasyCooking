{# src/Cooker/CookingBundle/Resources/views/Cook/showReceta.html.twig #}
{% extends 'CookerCookingBundle::layout.html.twig' %}
{% block title %}Detalles de la receta{% endblock %}

{% block body %}

    <h3 style="float:right"><a href="{{ path('cooker_cook_showPlato', { 'id': receta.tipo_plato.id }) }}">{{ receta.tipo_plato.nombre }}</a></h3>

	<h1>{{ receta.nombre }}</h1>

	<div class="date">
		{{ receta.date|date('d-m-Y') }}
	</div>
	<img class="imgGran" src="{{receta.imagen}}" alt="{{receta.nombre}}" />

	<h2>Ingredientes</h2>
	<ul class="ingredientes">
	{% for ingrediente in ingredientes %}
	<li><a href="{{ path('cooker_cook_showIngr', { 'id': ingrediente.id }) }}">{{ ingrediente.nombre }}</a></li>
	 {% endfor %}

	<h2>Preparación</h2>
	<div class="body">
		{{ receta.detalles }}
	</div>
	
	<br><br><br>

	<section class="previous-comments">
		<h3>Comentarios</h3>
		{% include 'CookerCookingBundle:Comment:list.html.twig' with { 'comentarios': comentarios } %}
	</section>

	<section class="coments" id="coments">
	
	<h3 style="margin-top: 40px">Añadir comentario</h3>
		{{ render(controller( 'CookerCookingBundle:Comentario:new', { 'receta_id': receta.id } )) }}
	</section>
	
	</section>
	{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/blog.css') }}" type="text/css" rel="stylesheet" />
	{% endblock %}

	<h3 style="color:red; margin-bottom: 0px">Recetas relacionadas</h3>
	
	<ul style="list-style-type: none; margin: 0; padding: 0;">
	{% for otrareceta in otrasrecetas %}
	<li style= "float: left; display: block; text-align: center; padding: 16px; ">
	<header>
		<h3><a href="{{ path('cooker_cook_showReceta', { 'id': otrareceta.id }) }}">{{ otrareceta.nombre }}</a></h3>
	</header>
		<img class="imgPeq" src="{{otrareceta.imagen}}" alt="{{otrareceta.nombre}}" />
	</li>
	{% endfor %}
	</ul>

{% endblock %}
