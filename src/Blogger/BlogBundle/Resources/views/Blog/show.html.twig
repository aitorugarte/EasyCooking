{% block title %}Detalles de la receta{% endblock %}

{% block body %}
	<h1>{{ receta.nombre }}</h1>
	<div class="date">
		{{ receta.date|date('d-m-Y') }}
	</div>
	<div class="body">
		{{ receta.detalles }}
	</div>		
	<section class="comments" id="comments">
	<h3>AÃ±adir comentario</h3>
		{{ render(controller( 'BloggerBlogBundle:Comment:new', { 'receta_id': receta.id } )) }}
	</section>
	<section class="previous-comments">
		<h3>Comentarios</h3>
		{% include 'BloggerBlogBundle:Comment:list.html.twig' with { 'comments': comments } %}
	</section>
	</section>
	{% block stylesheets %}
